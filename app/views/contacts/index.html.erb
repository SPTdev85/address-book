<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
   <form class="form-horizontal">
       <div class="form-group">
           <div class="col-md-8">
               <div class="input-group">
                   <div class="input-group-addon">
                       <span class="fa fa-search"></span>
                   </div>
                   <input type="text" class="form-control" placeholder="Who are you looking for?">
                   <div class="input-group-btn">
                       <button class="btn btn-primary">Search</button>
                   </div>
               </div>
           </div>
           <div class="col-md-4">
               <button class="btn btn-success btn-block">
                   <span class="glyphicon glyhicon-plus"></span>
                   <%= link_to 'New Contact', new_contact_path %>
               </button> 
           </div>
       </div>
   </form>
  </div>
</div>

<h3>Contact List</h3>
<div class="row">
 <% @contacts.each do |contact| %>
<div class="col-md-3">
  <!--contact card-->
<div class="panel panel-default">
  <div class="panel-body profile">
    <div class="profile-image">
      <img class="circle" src="assets/user.jpeg">
    </div>
    <div class="profile-data">
      <div class="profile-data-name"><%= contact.fname %> <%= contact.lname %></div>
      <div class="profile-data-title">Developer</div>
    </div>
    <div class="profile-controls">
      <a href="#" class="profile-control-left">
        <span class="glyphicon glyphicon-star"></span>
      </a>
      
      <%= link_to edit_contact_path(contact), class: "profile-control-right" do %>
          <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      </a>
    </div>
  </div>
  <div class="panel-body">
    <div class="contact-info">
      <p>
        <small>Mobile:</small>
        <br />
        <%= contact.mobile %></p>
      <p>
        <small>Email:</small>
        <br />
        <%= contact.email %></p>
        <p><small>Address:</small>
        <br />
        <%= contact.address %></p>
    </div>
  </div>
   </div>
</div>
  <!--end of col-md-3-->
  <% end %>
  </div> <!--end of row-->



